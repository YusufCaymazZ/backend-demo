# Environment Configuration for Gaming Backend Platform
# Copy this file to .env and customize for your environment

# JWT Configuration
# IMPORTANT: Generate a secure random key for production!
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
# This is a development-only default - REPLACE for production!
JWT_SECRET=dev_secret_key_change_this_in_production_a1b2c3d4e5f6
JWT_TTL_MIN=120

# Database Configuration
# For SQLite (development) - works out of the box:
DATABASE_URL=sqlite:///data/app.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://username:password@localhost:5432/dbname

# Data Directory
DATA_DIR=data

# AppsFlyer Configuration
# This default matches the test scripts - replace with your actual AppsFlyer HMAC secret
AF_SECRET=appsflyer_secret_key

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173

# Application Environment
ENVIRONMENT=development

# Optional: Logging level
# LOG_LEVEL=INFO
